
    <h2>Follow Users</h2>
      <% if @user.exists? %>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
          <td><%= user.name %></td>
          <td>フォロー数 :<%= user.followings.count %></td>
          <td>フォロワー数 :<%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>

